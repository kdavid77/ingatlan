<% provide(:title,'Regisztráció') %>

<h1>Regisztráció</h1>

<div class="row">
  <div class="span6 offset">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name, "Név" %>
      <%= f.text_field :name %>
      <%= f.label :email, "E-mail cím" %>
      <%= f.text_field :email %>
      <%= f.label :password, "Jelszó" %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Jelszó megrősítés" %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Regisztrálás", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>